<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑基本信息"
            android:id="@+id/edit_textView"
            android:layout_marginTop="20px"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_editText1"
            android:layout_gravity="center_horizontal"
            android:hint="网站名:"
            android:layout_marginTop="30px"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_editText2"
            android:hint="用户名:"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全设定"
            android:id="@+id/edit_textView2"
            android:layout_marginTop="20px"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50px">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="字母个数"
                    android:id="@+id/edit_text_letter"
                    android:layout_gravity="left|center_horizontal"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"/>
            <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_numberPicker1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_below="@id/edit_text_letter"
                    android:layout_centerHorizontal="true"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数字个数"
                    android:id="@+id/edit_text_number"
                    android:layout_gravity="left|center_horizontal"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"/>

            <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_numberPicker4"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_below="@id/edit_text_number"
                    android:layout_centerHorizontal="true"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="符号个数"
                    android:id="@+id/edit_text_p"
                    android:layout_gravity="left|center_horizontal"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"/>

            <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_numberPicker3"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_below="@id/edit_text_p"
                    android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="100px"
                  android:gravity="right">

        <Button android:id="@+id/edit_enter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:text="确认"
                />

    </LinearLayout>


</LinearLayout>